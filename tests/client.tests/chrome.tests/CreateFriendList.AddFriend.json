        {
            "type": "click",
            "target": "main",
            "selectors": [
                [
                    "#addFriendButton"
                ],
                [
                    "text/Add Friend"
                ]
            ],
            "offsetY": 19.890625,
            "offsetX": 67.4296875,
            "assertedEvents": [
                {
                    "type": "navigation",
                    "url": "http://localhost:8080/pages/friends.html?name=&email=",
                    "title": ""
                }
            ]
        },
        {
            "type": "waitForElement",
            "target": "main",
            "selectors": [
                [
                    "text/steven",
                    "text/steven@gmail.com"
                ]
            ]
        }
    ]
