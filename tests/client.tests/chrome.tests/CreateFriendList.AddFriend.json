        },
        {
            "type": "setViewport",
            "width": 1155,
            "height": 952,
            "deviceScaleFactor": 1,
            "isMobile": false,
            "hasTouch": false,
            "isLandscape": false
        },
        {
            "type": "navigate",
            "url": "http://localhost:8080/pages/friends.html",
            "assertedEvents": [
                {
                    "type": "navigation",
                    "url": "http://localhost:8080/pages/friends.html",
                    "title": "YACA Friend List"
                }
            ]
        },
        {
            "type": "click",
            "target": "main",
            "selectors": [
                [
                    "#nameInput"
                ]
            ],
            "offsetY": 6.1875,
            "offsetX": 220.6875
        },
        {
            "type": "change",
            "value": "steven",
            "selectors": [
                [
                    "#nameInput"
                ]
            ],
            "target": "main"
        },
        {
            "type": "click",
            "target": "main",
