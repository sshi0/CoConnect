                [
                    "#emailInput"
                ]
            ],
            "offsetY": 25.1875,
            "offsetX": 57.703125
        },
        {
            "type": "change",
            "value": "steven@gmail.com",
            "selectors": [
                [
                    "#emailInput"
                ]
            ],
            "target": "main"
